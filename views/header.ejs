<link rel="stylesheet" type="text/css" href="css/estiloheader.css">


<div class="cabecera ">
    <nav class="headerColor">
        <div class="logo1">
            <a href="index"><img class="logo" src="img\logo.png" alt="APPet@Corporation"></a>
        </div>
        <div class="sesion">
            <% if(idU==undefined){ %>
            <div class="col-lg-12">
                <button type="button" class="btn btn-primary inicioSesion" data-toggle="modal" data-target="#exampleModal">Iniciar Sesión</button>
            </div>
            <div class="col-lg-12">
                <button type="button" class="btn btn-danger registro">Registrarse</button>
            </div>
            <% }else{ %>
            <div class="col-lg-12">
                <form>
                    <button type="submit" formmethod="get" formaction="/cerrarSesion" class="btn btn-primary">Cerrar Sesión</button>
                </form>
            </div>
            <div class="col-lg-12">
                <button type="button" class="btn btn-danger modificar">Modificar</button>
            </div>
            <% } %>
           
        </div>
    </nav>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="index">INICIO</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a class="nav-link" href="iralistarperros">Perros <span class="sr-only">(current)</span></a></li>
                <li><a class="nav-link" href="iraprotectora">Protectoras</a></li>
                <li><a class="nav-link" href="iracomoadoptar">Como adoptar</a></li>

            </ul>
        </div>
    </nav>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modalIS" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Iniciar Sesión</h5>
            </div>
            <div class="modal-body">
                <form  class="formIS">
                    <div class="form-group">
                        <label for="exampleInputEmail1">E-mail: </label>
                        <input type="email" class="form-control" id="exampleInputEmail1" name="email" aria-describedby="emailHelp" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Contraseña</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="pass" placeholder="Password">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="adoptante" checked>
                        <label class="form-check-label" for="gridRadios1">
				Soy adoptante
				</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="protectora">
                        <label class="form-check-label" for="gridRadios2">
				Soy protectora
				</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios3" value="admin">
                        <label class="form-check-label" for="gridRadios3">
				Soy administrador
				</label>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="submit" formmethod="post" formaction="/iniciarSesion" class="btn btn-primary">Iniciar Sesión</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
            </form>
        </div>
    </div>
</div>