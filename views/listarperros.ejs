<html>

<!-- Página web que muestra la lista de perros de todas las protectoras-->

<head class="headerColor">
    <title>APPet</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="css/estiloslistaperros.css">
    <link rel="icon" type="image/png" href="img/logo.png" />
</head>

<body>
    <%- include('./header'); %>
        <div class="listaperros">
            <h3>Mostrando perros:</h3>

            <div class="panel-body">

                <!--Inicio de los paneles individuales de los perros-->
                <% if(perros !== undefined){ %>
                    <% perros.forEach(p => { %>
                        <div class="col-sm-4 col-md-3 col-lg-2">
                            <div class="panel panel-default">
                                <div class="panel-heading contenedor">
                                    <span><%= p.nombre %></span>
                                </div>
                                <!-- Nombre del perro-->
                                <div class="panel-body">
                                    <div class="contImg">
                                        <img class="fotoperro img-responsive" src="img/perro/<%= p.id %>">
                                    </div>
                                    <!--boton-->
                                    <div class="contBot">
                                        <form action="/detalleperro.html" method="GET">
                                            <input type="submit" class="btn btn-success ver" value="Ver Detalles ">
                                            <input type="hidden" name="idPerro" value="<%= p.id%>">
                                        </form>
                                    </div>
                                    <!--Aqui acaba el panel emergente-->
                                </div>
                            </div>
                        </div>
                        <% }); %>

                            <% } else if (perros === undefined){ %>
                                <div class="alert alert-warning alerta">
                                    No existe ningún perro actualmente.
                                </div>
                                <% } %>

                                    <!--Final de los panel individual de los perros-->
            </div>
        </div>
        <%- include('./footer'); %>
</body>

</html>