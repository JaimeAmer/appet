<html>

<!-- Página web que muestra información al usuario realativa a la adopción de perros-->

<head class="headerColor">
    <title>APPet</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
    <link rel="icon" type="image/png" href="img/logo.png" />
    <link rel="stylesheet" type="text/css" href="css/estilocomoadoptar.css">
	
</head>

<body>
    <%- include('./header'); %>
        <div id="content">
			
			<% if(mensaje!=undefined){%>
				<% if(mensaje=="exito"){%>
					<div class="modal fade in" id="myModal" role="dialog" style="display: block;">
				  </div>
				<%}else{%>
					<div class="alert alert-danger page-alert" id="alert-3" >
                    <ul>
                        <%if(mensaje!=undefined){%>
                            <li><%= mensaje %></li>
                        <%}else{%>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                                <% }); %>
                        <%}%>
                    
                    </ul>
                </div>
            <%}}%>
			         
			<form id="login" class="form-login formRegistro justify" action="/modPerro" method="POST" enctype="multipart/form-data">
				<h1>Modificar los campos que considere necesario y pulsar en Modificar.</h1>
			  <div class="form-row">
				<div class="form-group col-md-12">
					<label for="inputAddress">Nombre</label>
					<input type="text" class="form-control" name="nombre" id="inputAddress" value="<%= datos.nombre %>" placeholder="Nombre"  required>
			  </div>
				<div class="form-group col-md-12">
					<label for="inputAddress">Imagen</label>
					<input type="file" class="form-control" name="imagen" id="inputAddress1" accept="image/*"><span class="red">Solo añadir imagen si quiere cambiar la actual.</span>
			  </div>
				<div class="form-group col-md-3">
				  <label for="inputEdad4">Edad</label>
				  <input type="number" class="form-control" name="edad" id="inputEdad4" value="<%= datos.edad %>" placeholder="Edad" required>
				</div>
				<div class="form-group col-md-3">
				  <label for="inputRaza4">Raza</label>
				  <input type="text" class="form-control" name="raza" id="inputRaza4" value="<%= datos.raza %>" placeholder="Raza" required>
				</div>
				<div class="form-group col-md-3">
				  <label for="inputColor4">Color</label>
				  <input type="text" class="form-control" name="color" id="inputcolor" value="<%= datos.color %>" placeholder="Color" required>
				</div>
				<div class="form-group col-md-3">
				  <label for="inputPeso">Peso</label>
				  <input type="text" class="form-control" name="peso" value="<%= datos.peso %>" id="inputPeso" required>
				</div>
				<!-- <div class="form-group col-md-6">
					<label for="inputFall">Fallecido</label>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="fallecido" id="inlineRadio1" value="1" >
						<label class="form-check-label" for="inlineRadio1">Si</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="fallecido" id="inlineRadio2" value="0">
						<label class="form-check-label" for="inlineRadio2">No</label>
					</div>
				</div> -->
				<div class="form-group col-md-6">
				<label for="inputFall">Adoptado</label>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="adoptado" id="inlineRadio1" value="1">
						<label class="form-check-label" for="inlineRadio1">Si</label>
					</div>
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="adoptado" id="inlineRadio2" value="0">
						<label class="form-check-label" for="inlineRadio2">No</label>
					</div>
				</div>
			  </div>
			  <div class="form-group col-md-12">
				<label for="inputAddress2">Descripción</label>
				<textarea class="form-control" name="descripcion" id="exampleFormControlTextarea1" rows="3"><%= datos.descripcion %></textarea>
			  </div>
                                
			  <div class="form-group col-md-4">
					<label for="inputAddress2"></label>
					<input type="hidden" name="id" value="<%= datos.id %>">
			  </div>
                                
			  <button type="submit" class="btn btn-primary tnegrita col-md-4 ">Modificar</button>
			</form>
        </div>
		<script>
			/*if(datos.fallecido ===0){
				document.getElementsByName("fallecido")[1].checked=true;
			}else{
				document.getElementsByName("fallecido")[0].checked=true;
			}*/
			
			if(datos.adoptado ===0){
				document.getElementsByName("adoptado")[1].checked=true;
			}else{
				document.getElementsByName("adoptado")[0].checked=true;
			}
		</script>
        <%-	include('./footer'); %>
</body>

</html>