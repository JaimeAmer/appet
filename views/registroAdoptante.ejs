<html>

<!-- Página web que muestra información al usuario realativa a la adopción de perros-->

<head class="headerColor">
    <title>APPet</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
    <link rel="icon" type="image/png" href="img/logo.png" />
    <link rel="stylesheet" type="text/css" href="css/estilocomoadoptar.css">
</head>

<body>
    <%- include('./header'); %>
        <div id="content" class="divRegistro">
			<% if(mensaje!=undefined){%>
				<% if(mensaje=="exito"){%>
					<div class="modal fade in" id="myModal" role="dialog" style="display: block;">
						<div class="modal-dialog">
					  <!-- Modal content-->
					  <div class="modal-content">
						<div class="modal-header">
						  <h4 class="modal-title">¡Se ha realizado el registro correctamente!</h4>
						</div>
						<div class="modal-body">
						  <p>Pulsa para poder iniciar sesión en tu cuenta</p>
						</div>
						<div class="modal-footer">
						  <a href="./login" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Iniciar Sesión</a>
						</div>
					  </div>
					</div>
				  </div>
				<%}else{%>
					<div class="alert alert-danger page-alert" id="alert-3" >
                    <ul>
                        <%if(mensaje!=undefined){%>
                            <li><%= mensaje %></li>
                        <%}else{%>
                            <% errors.forEach(error => { %>
                                <li><%= error.msg %></li>
                                <% }); %>
                        <%}%>
                    
                    </ul>
                </div>
            <%}}%>
			
			<form id="login" class="form-login formRegistro justify" action="/registroAdoptante1" method="POST">
					 <h1>Rellenar todos los campos disponibles.</h1>
					<div class="form-group col-md-12">
					  <label for="inputEmail4">Email</label>
					  <input type="email" class="form-control" name="email" id="inputEmail4" placeholder="Email" required>
					</div>
					<div class="form-group col-md-6">
					  <label for="inputPassword4">Password</label>
					  <input type="password" class="form-control" name="password" id="inputPassword4" placeholder="Password"  required>
					</div>
					<div class="form-group col-md-6">
					  <label for="inputPassword4">Repita la Password</label>
					  <input type="password" class="form-control" name="password1" id="inputPassword4" placeholder="Password" required>
					</div>
					<div class="form-group col-md-6">
						<label for="inputAddress">Nombre</label>
						<input type="text" class="form-control" name="nombre" id="inputAddress" placeholder="Nombre"  required>
					</div>
					<div class="form-group col-md-6">
						<label for="inputAddress">Apellido</label>
						<input type="text" class="form-control" name="apellidos" id="inputAddress1" placeholder="Apellidos"  required>
					</div>
					<div class="form-group col-md-12">
						<label for="inputAddress2">Fecha de Nacimiento</label>
						<input type="date" class="form-control" name="fecha" id="inputAddress2" required>
					</div>
					<div class="form-group col-md-4">
						<label for="inputCity">Ciudad</label>
						<input type="text" class="form-control" name="ciudad" id="inputCity" required>
					</div>
					<div class="form-group col-md-4">
						<label for="inputAddress2">Dirección</label>
						<input type="text" class="form-control" name="direccion" id="inputAddress3" placeholder="Dirección" required>
					</div>
					<div class="form-group col-md-4">
						<label for="inputAddress2">Teléfono</label>
						<input type="tel" class="form-control" name="telefono" id="inputAddress4" placeholder="Teléfono" required>
					</div>
					<div class="form-group col-md-4">
						<label for="inputAddress2"></label>
						<input type="hidden">
					</div>
			  <button type="submit" class="btn btn-primary tnegrita col-md-4">Registrar</button>
			</form>
        </div>
		

        <%- include('./footer'); %>
</body>

</html>