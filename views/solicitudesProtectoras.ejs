<html>
    
    <!-- Página web que muestra información relativa a la protectora solicitada por el usuario-->
    
    <head class="headerColor">
        <title>APPet</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">
        <link rel="icon" type="image/png" href="img/logo.png" />
    </head>
    
    <body>
        <%- include('./header'); %>
            <div class="container">
                    <div class="row col-md-offset-0 col-md-12 custyle">
                            <h2>Solicitudes de protectoras</h2>
                        <% if(protectoras.length === 0){ %>
                            <div class="alert alert-warning alerta">
                                No hay solicitudes de protectoras actualmente
                            </div>
                        <% }else{ %>
                            <table class="table table-striped custab">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nombre</th>
                                    <th>Email</th>
                                    <th>Ciudad</th>
                                    <th>Imagen</th>
                                    <th>Dirección</th>
                                    <th>Teléfono</th>
                                    <th>Descripción</th>
                                    <th class="text-center">Acción</th>
                                </tr>
                            </thead>
                                <% protectoras.forEach(p => { %>
                                    <tr>
                                        <td><%= p.id %></td>
                                        <td><%= p.nombre %></td>
                                        <td><%= p.email %></td>
                                        <td><%= p.ciudad %></td>
                                        <td><img class="fotoprotectora img-thumbnail" src="img/protectora/<%=p.id%>"></td>
                                        <td><%= p.direccion %></td>
                                        <td><%= p.telefono %></td>
                                        <td><%= p.descripcion %></td>
                                        
                                        <td class="text-center">
                                            <form action="/aceptarProtectora" method="POST">
                                                <button type="submit"class="btn btn-success btn-xs"><span class="glyphicon glyphicon-remove"></span>Aceptar</button>
                                                <input type="hidden" name="idProtectora" value="<%= p.id%>">
                                            </form>
                                            <form action="/rechazarProtectora" method="POST">
                                                <button type="submit"class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span>Rechazar</button>
                                                <input type="hidden" name="idProtectora" value="<%= p.id%>">
                                            </form>                                            
                                        </td>
                                    </tr>
                                <% }); %>
                        </table>
                        <% }; %>
                    </div>
                </div>
        <%- include('./footer'); %>
        <%if(msg !== undefined){%>
            <script type="text/javascript">
                alert("<%= msg%>");
            </script>
        <%}%>
    </body>
    
</html>